table ip filter {
    chain input {
        iifname { "wg-k8s-dev" } icmp type { echo-request, destination-unreachable, time-exceeded } counter accept comment "Allow select ICMP"
        iifname { "wg-k8s-dev" } counter drop comment "Drop all other unsolicited traffic"
    }

    chain forward {
        iifname { "wg-k8s-dev" } oifname { "wg-k8s-dev" } accept comment "Allow bi-directional wg-k8s-dev"
        iifname { "wg-k8s-dev" } oifname { "tun-illyse" } accept comment "Allow wg-k8s-dev to VPN WAN"
        iifname { "tun-illyse" } oifname { "wg-k8s-dev" } ct state { established, related } accept comment "Allow established back from VPN WAN to wg-public"
        iifname { "wg-k8s-dev" } icmp type { echo-request, destination-unreachable, time-exceeded } counter accept comment "Allow select ICMP"
        iifname { "wg-k8s-dev" } counter drop comment "Drop all other unsolicited traffic"
    }
}

# vim: ft=nftables
