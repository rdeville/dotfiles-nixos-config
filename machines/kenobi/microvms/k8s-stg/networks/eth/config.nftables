table ip filter {
    chain input {
        iifname { "vm-k8s-stg" } accept comment "Allow vm-k8s-stg to access the VM"
        iifname { "vm-k8s-stg" } icmp type { echo-request, destination-unreachable, time-exceeded } counter accept comment "Allow select ICMP"
        iifname { "vm-k8s-stg" } counter drop comment "Drop all other unsolicited traffic"
    }

    chain forward {
        iifname { "wg-k8s-stg" } accept comment "Allow to forward from wg-k8s-stg"
        iifname { "wg-k8s-stg" } counter drop comment "Drop all other unsolicited traffic"
    }
}

# vim: ft=nftables
