table ip filter {
    chain input {
        iifname { "vm-k8s-stg" } accept comment "Allow wg-private networks to access the router"
    }

    chain forward {
        iifname { "vm-k8s-stg" } oifname { "vm-k8s-stg" } accept comment "Allow bidirectionnal vm-k8s-stg"
        iifname { "vm-k8s-stg" } oifname { "tun-illyse" } accept comment "Allow vm-k8s-stg to VPN WAN"
        iifname { "tun-illyse" } oifname { "vm-k8s-stg" } ct state { established, related } accept comment "Allow established back from VPN WAN to vm-public"
        iifname { "vm-k8s-stg" } icmp type { echo-request, destination-unreachable, time-exceeded } counter accept comment "Allow select ICMP"
        iifname { "vm-k8s-stg" } counter drop comment "Drop all other unsolicited traffic"
    }
}

# vim: ft=nftables
