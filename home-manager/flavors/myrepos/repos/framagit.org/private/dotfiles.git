[${HOME}/git/framagit.org/private/dotfiles/nixos]
checkout =
  mr_checkout "git@framagit.org:rdeville-private/dotfiles/nixos-config.git"
  ln -s "${MR_REPO}" "${XDG_CONFIG_HOME:-${HOME}/.config}/nixos"
  ln -s "${MR_REPO}" "${XDG_CONFIG_HOME:-${HOME}/.config}/home-manager"

[${HOME}/git/framagit.org/private/dotfiles/direnv]
checkout =
  mr_checkout "git@framagit.org:rdeville-private/dotfiles/direnv.git"
  ln -s "${MR_REPO}" "${XDG_DATA_HOME:-${HOME}/.local/share}/direnv"

